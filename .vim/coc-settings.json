    "cSpell.dictionaries": ["spell_added"],
    "cSpell.enabledLanguageIds": [
        "git-commit",
        "gitcommit",
        "latex",
        "markdown",
        "plaintext",
        "text"
    ],

    //diagnostic
    "diagnostic.signOffset": 9999999,
	"diagnostic.errorSign": "?",
	"diagnostic.warningSign": "!",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.infoSign": "i",
    "diagnostic.hintSign": "âž¤",
    "diagnostic-languageserver.filetypes": {
    // "markdown": ["write-good"],
    // "text": ["write-good"]
    },

    // coc-explorer
    "explorer.icon.expanded": "â–¾",
    "explorer.icon.shrinked": "â–¸",
    "explorer.width": 26,
    "explorer.file.column.indent.indentLine": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.showHiddenFiles": true,
    "explorer.file.column.git.showIgnored": true,
    "explorer.keyMappings": {
        "k": "nodePrev",
        "j": "nodeNext",
        "*": "toggleSelection",
        "<tab>": "actionMenu",
        "h": "collapse",
        "l": "expand",
        "J": ["toggleSelection", "normal:j"],
        "K": ["toggleSelection", "normal:k"],
        "gl": "expandRecursive",
        "gh": "collapseRecursive",
        "o": "expandOrCollapse",
        "<cr>": "open",
        "e": "open",
        "E": "openInVsplit",
        "t": "openInTab",
        "<bs>": "gotoParent",
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",
        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",
        ".": "toggleHidden",
        "R": "refresh",
        "?": "help",
        "q": "quit",
        "X": "systemExecute",
        "gd": "listDrive",
        "f": "search",
        "F": "searchRecursive",
        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",
        "[[": "sourcePrev",
        "]]": "sourceNext",
        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",
        "gk": "gitPrev",
        "gj": "gitNext",
        "<-": "gitStage",
        "->": "gitUnstage"    

    },
    // coc-git
    "git.enableGutters": true,
    "git.addedSign.hlGroup": "GitAdd",
    "git.removedSign.hlGroup": "GitDeleteBottom",
    "git.topRemovedSign.hlGroup": "GitDeleteTop",
    "git.changeRemovedSign.hlGroup": "GitDeleteTopAndBottom",
    "git.changedSign.hlGroup": "GitModify",

    // add your languageServer into this list
    "languageserver": {}
}
